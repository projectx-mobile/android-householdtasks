<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonLoginStyle">
        <item name="android:background">@drawable/selector_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>

    </style>

    <style name="TextInputEditTextLoginStyle">
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorTextAppearance">@string/font_family_regular</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="android:textSize">@dimen/text_size.small</item>
    </style>
</resources>
