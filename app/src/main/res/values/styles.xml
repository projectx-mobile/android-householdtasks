<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonLoginStyle">
        <item name="android:background">@drawable/selector_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WhiteCustomButton">
        <item name="android:background">@drawable/selector_white_button</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundAddCustomButton">
        <item name="android:background">@drawable/selector_add_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="CustomTextInputLayoutLogin">
        <item name="android:background">@drawable/text_input_layout</item>
        <item name="android:textColorHint">"#D74457"</item>
    </style>

    <style name="CustomTextInputLayoutLoginError" parent="CustomTextInputLayoutLogin">
        <item name="android:background">@drawable/rectangle_error</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>

    </style>

    <style name="TextInputEditTextLoginStyle">
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorTextAppearance">@string/font_family_regular</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="android:textSize">@dimen/text_size.small</item>
    </style>

    <style name="CustomToggleButtonUserRole">
        <item name="android:background">@drawable/custom_toggle_button_role_selector</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomBottomSheetNotification">
        <item name="android:background">@drawable/bottom_sheet_item_selector</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:textColorPrimary">@color/hint_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_juicy_grape</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_juicy_grape</item>
    </style>


    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
</resources>
