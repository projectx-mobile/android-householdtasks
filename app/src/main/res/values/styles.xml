<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonLoginStyle">
        <item name="android:background">@drawable/selector_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="CustomTextInputLayoutLogin">
        <item name="android:background">@drawable/text_input_layout</item>
        <item name="android:textColorHint">"#D74457"</item>
    </style>

    <style name="CustomTextInputLayoutLoginError" parent="CustomTextInputLayoutLogin">
        <item name="android:background">@drawable/rectangle_error</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>

    </style>

    <style name="TextInputEditTextLoginStyle">
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="android:textSize">@dimen/text_size.small</item>
    </style>

    <style name="ExpandedAppBar">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsedAppBar">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="strokeWidth">1dp</item>
        <item name="itemStrokeColor">@color/primary_midnight</item>
        <item name="itemStrokeWidth">1dp</item>

        <item name="android:strokeColor">@color/primary_midnight</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
        <item name="itemStrokeColor">@color/primary_midnight</item>
        <item name="itemStrokeWidth">1dp</item>
    </style>
</resources>
