<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseholdTasks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>

    </style>

    <!-- TextAppearance -->
    <style name="TextAppearanceLoginTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_midnight</item>
    </style>

    <style name="description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_gray</item>
    </style>

    <style name="bottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="cornerRadius">3dp</item>
        <item name="cornerSize">1dp</item>
        <item name="backgroundColor">@color/primary_white_snow</item>
        <item name="android:strokeColor">@color/secondary_lavander_grey</item>
        <item name="android:strokeWidth">1</item>
    </style>

    <style name="ThemeAppBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/asdasd</item>
        <!-- Support library compatibility -->
        <item name="background">@color/asdasd</item>
        <item name="colorPrimary">@color/asdasd</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


</resources>