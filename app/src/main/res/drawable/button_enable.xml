<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="@dimen/button_elevation_y"
        android:top="@dimen/button_elevation_x">
        <shape>
            <solid android:color="@color/button_enable_boarder_color" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/button_elevation_x"
        android:right="@dimen/button_elevation_y">
        <shape>
            <solid android:color="@color/primary_color" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/button_elevation_x"
        android:right="@dimen/button_elevation_y">
        <shape>
            <stroke
                android:width="@dimen/inner_boarder"
                android:color="@color/button_enable_boarder_color" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
</layer-list>