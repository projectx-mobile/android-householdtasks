<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/ic_error"></item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="@dimen/spacing.x_extra_small"
                android:color="@color/error_color" />
            <size android:height="@dimen/spacing.x_extra_large" />
            <padding
                android:bottom="@dimen/spacing.x_small"
                android:left="@dimen/spacing.x_normal"
                android:right="@dimen/spacing.x_small"
                android:top="@dimen/spacing.x_small" />
            <corners android:radius="@dimen/spacing.small" />
        </shape>
    </item>
</layer-list>
