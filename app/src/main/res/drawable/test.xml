<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item
        android:left="2dp"
        android:top="3dp">
        <shape>
            <solid android:color="@color/task_card_stroke_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:bottom="3dp"
        android:right="2dp">
        <shape>
            <solid android:color="@color/task_new" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_midnight" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/primary_white_snow" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_lavander_grey" />
        </shape>
    </item>

</layer-list>