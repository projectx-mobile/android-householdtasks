<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="3dp"
        android:top="3dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/spacing.small" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="2dp">
        <shape>
            <solid android:color="@color/primary_color" />
            <corners android:radius="@dimen/spacing.small" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_midnight" />
        </shape>
    </item>
</layer-list>