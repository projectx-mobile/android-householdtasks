<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.EditProfileFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/login_toolbar" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing.medium"
        android:fontFamily="@font/nexa_demo_bold"
        android:text="Мой профиль"
        android:textColor="@color/login_title_color"
        android:textSize="@dimen/text_size.x_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing.large"
        android:background="@drawable/oval_with_icon_photo"
        android:gravity="center"
        android:text="И"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/text_size.x_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing.medium"
        android:layout_marginTop="@dimen/spacing.xx_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_photo" />

    <com.projectx.householdtasks.presentation.CustomTextInputLayout
        android:id="@+id/person_name"
        style="@style/CustomInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing.medium"
        android:layout_marginTop="@dimen/spacing.xx_extra_large"
        android:gravity="bottom"
        android:hint="@string/name"
        app:layout_constraintTop_toBottomOf="@id/profile_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            style="@style/CustomTextInputLayoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />
    </com.projectx.householdtasks.presentation.CustomTextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/save_changes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing.x_extra_large"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/spacing.extra_large"
        android:background="@drawable/rectangle_white_with_shadow"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person_name"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing.small_xx"
            android:layout_marginEnd="14dp"
            android:fontFamily="sans-serif-medium"
            android:text="Сохранить изменения"
            android:textColor="@color/background_nav_bar_color"
            android:textSize="@dimen/text_size.medium" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Изменения сохранены"
        android:visibility="invisible"
        android:textColor="@color/background_nav_bar_color"
        android:textSize="@dimen/text_size.xx_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_changes" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/exit_profile"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing.x_extra_large"
        android:layout_marginBottom="@dimen/text_size.x_medium"
        android:layout_marginHorizontal="82dp"
        android:background="@drawable/rectangle_white_with_shadow"
        android:gravity="center|left"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@drawable/ic_delete_profile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing.small_xx"
            android:layout_marginEnd="14dp"
            android:text="Удалить профиль"
            android:textColor="@color/background_nav_bar_color"
            android:textSize="@dimen/text_size.small"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>