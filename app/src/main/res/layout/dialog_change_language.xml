<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать язык приложения"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/dark_text_color"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <RadioButton
            android:id="@+id/radio_button_russian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/radio_button_selector"
            android:drawablePadding="@dimen/spacing.small_xx"
            android:fontFamily="sans-serif"
            android:text="Русский"
            android:textSize="@dimen/text_size.small" />

        <RadioButton
            android:id="@+id/radio_button_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableStart="@drawable/radio_button_selector"
            android:drawablePadding="@dimen/spacing.small_xx"
            android:fontFamily="sans-serif"
            android:text="English"
            android:textSize="@dimen/text_size.small"
            app:layout_constraintStart_toStartOf="parent" />
    </RadioGroup>


    <TextView
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОК"
        android:textColor="@color/primary_juicy_grape"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group" />

    <TextView
        android:id="@+id/negative_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:textColor="@color/dark_text_color"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:paddingBottom="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toTopOf="@id/ok_button"
        app:layout_constraintBottom_toBottomOf="@id/ok_button"
        app:layout_constraintEnd_toStartOf="@id/ok_button" />
</androidx.constraintlayout.widget.ConstraintLayout>