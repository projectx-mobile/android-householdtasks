<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginTop="@dimen/small_vertical_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:background="@drawable/test"
    app:cardUseCompatPadding="true">


    <TextView
        android:id="@+id/task_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/small_vertical_margin"
        android:fontFamily="@font/nexa_demo"
        android:text="@string/task_label_placeholder"
        android:textColor="@color/primary_midnight"
        android:textSize="@dimen/small.TextSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/task_status_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/small_vertical_margin"
        app:layout_constraintStart_toStartOf="@+id/task_label"
        app:layout_constraintTop_toBottomOf="@+id/task_label"
        app:srcCompat="@drawable/task_deadline_overdue" />

    <TextView
        android:id="@+id/task_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_horizontal_margin"
        android:text="Не в срок"
        android:textColor="@color/primary_midnight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_status_icon"
        app:layout_constraintStart_toEndOf="@+id/task_status_icon"
        app:layout_constraintTop_toTopOf="@+id/task_status_icon" />


    <ImageView
        android:id="@+id/reward_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/horizontal_margin"
        app:layout_constraintBottom_toBottomOf="@+id/task_status_label"
        app:layout_constraintStart_toEndOf="@+id/task_status_label"
        app:layout_constraintTop_toTopOf="@+id/task_status_label"
        app:srcCompat="@drawable/task_details__value" />


    <TextView
        android:id="@+id/task_reward_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 баллов"
        android:textColor="@color/primary_midnight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/reward_icon"
        app:layout_constraintStart_toEndOf="@+id/reward_icon"
        app:layout_constraintTop_toTopOf="@+id/reward_icon" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:button="@drawable/checkbox_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

