<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="java.lang.String" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />
        <variable
            name="arrow"
            type="android.graphics.drawable.Drawable" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_person"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/spacing.small"
        android:background="@drawable/rectangle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_password">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing.normal"
            android:background="@{icon}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing.small"
            android:layout_marginEnd="@dimen/spacing.normal"
            android:layout_weight="30"
            android:drawableEnd="@{arrow}"
            android:fontFamily="sans-serif-medium"
            android:text="@{title}"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/text_size.small" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>