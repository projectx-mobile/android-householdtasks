<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_create_account_notifications_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing.large"
        android:paddingLeft="@dimen/spacing.normal"
        android:paddingRight="@dimen/spacing.normal"
        android:fontFamily="@font/nexa_demo_bold"
        android:text="@string/create_account_finish_title"
        android:textAppearance="@style/TextAppearanceLoginTitleStyle"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_create_account_notifications_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing.normal"
        android:paddingRight="@dimen/spacing.normal"
        android:layout_marginTop="@dimen/spacing.small"
        android:gravity="center_vertical"
        android:text="@string/create_account_finish_subtitle"
        android:textAppearance="@style/description"
        app:layout_constraintTop_toBottomOf="@id/textview_create_account_notifications_title"/>

